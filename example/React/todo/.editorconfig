# Inherits from parent .editorconfig

[*.{js,jsx,json}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.{diff,md}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[.eslintrc]
indent_style = space
indent_size = 2

[.babelrc]
indent_style = space
indent_size = 2

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
